<p id="notice"><%= notice %></p>

<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :date_of_purchase %><br>
    <%= f.text_field(:purchased_time, class: "datepicker") %>
  </div>

  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price, :step => 'any' %>
  </div>
   <div class="tag_list_field">
    <%= f.label :tags %><br>
    <%= f.text_field :tag_list, value: @item.tag_list.to_s  %>
  </div>
 
  <div class="field">
    <%= f.label :category %><br>
    <%= f.text_field :category, value: @item.category.blank? ? '' : @item.category.name %>
  </div>
  <div class="field">
    <%= f.label :store %><br>
    <%= f.text_field :store, value: @item.store.blank? ? '' : @item.store.name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
