<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<p> Filter items: </p>

<table>
  <thead>
    <tr>
      <th>Purchase date</th>
      <th>Price</th>
      <th>Tags</th>
      <th>Category</th>
      <th>Store</th>
      <th>usr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.purchased_time.strftime("%v") %></td>       
        <td><%= item.price %></td>
        <td><%= item.tag_list %></td>
        <td><%= item.category.name %></td>
        <td><%= item.store.name %></td>
        <td><%= item.user_id %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New Item', new_item_path %> |
<%= link_to 'Sign out', destroy_user_session_path %></p>